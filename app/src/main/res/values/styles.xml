<resources>

    <style name="Theme.VpnApp.Blue.Base" parent="Theme.MaterialComponents.NoActionBar">

        <item name="colorAccent">@color/blue_primary</item>

        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/blue_primary</item>

        <item name="colorSecondary">@color/cyan_secondary</item>
        <item name="colorSecondaryVariant">@color/cyan_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorError">@color/red_700_primary</item>
        <item name="colorOnError">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:colorBackground">@color/background_blue_theme</item>
        <item name="colorOnBackground">@color/main_text_color_blue_theme</item>

        <item name="android:textColor">@color/main_text_color_blue_theme</item>

        <item name="materialCardViewStyle">@style/MyCardView</item>
        <item name="buttonStyle">@style/ButtonStyle</item>

        <item name="dividerHorizontal">@style/DividerStyle</item>

        <item name="textColorMain">@color/main_text_color_blue_theme</item>
        <item name="textColorHighlight">?attr/colorPrimary</item>
        <item name="textColorSecondary">@color/white</item>

        <item name="pendingColor">@color/blue_theme_pending_color</item>
        <item name="inactiveColor">@color/grey</item>

        <item name="vpnHeadlineTextColor">?attr/colorOnPrimary</item>


        <!--<item groupName="inputLayoutStrokeColor">@color/text_input_box_stroke</item>-->

    </style>

    <!--Public styles-->
    <style name="Theme.VpnApp.Blue" parent="Theme.VpnApp.Blue.Base"/>

    <style name="Theme.VpnApp.Blue.OppositeStatusBar" parent="Theme.VpnApp.Blue"/>

    <!--END OF Blue theme-->

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="android:textColorHint">?attr/colorOnBackground</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="hintTextAppearance">@style/InputLayoutHintStyle</item>
        <item name="android:paddingBottom">@dimen/small_spacing</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="errorTextColor">?attr/colorError</item>

    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>

    <style name="InputLayoutHintStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CustomCounterTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">?attr/colorOnBackground</item>

        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="colorControlHighlight">?attr/colorPrimary</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="MyCardView" parent="Widget.MaterialComponents.CardView">
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="DividerStyle">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="SettingsFragmentStyle">

        <item name="android:textColorSecondary">?attr/colorOnBackground</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">?attr/colorPrimary</item>

        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextAppearance">@style/TextAppearance.MaterialComponents.Button</item>

        <item name="tabRippleColor">@color/grey_dark</item>

    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="ToolbarTheme.Popup" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:background">@null</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColor">?attr/vpnHeadlineTextColor</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="FreeAccessToolbarTheme">
        <item name="android:textColor">?attr/vpnHeadlineTextColor</item>
        <item name="android:background">@color/free</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!--  Text styles  -->

    <style name="LangApp.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">@dimen/very_large_text_size</item>
    </style>

    <style name="LangApp.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="LangApp.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="LangApp.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="LangApp.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
</resources>
