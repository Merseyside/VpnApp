<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="obj"
            type="com.merseyside.dropletapp.presentation.view.fragment.authFragment.model.ProviderItemModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bind:contentPadding="@dimen/small_spacing"
        android:elevation="1dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/spinner_ripple"
        android:layout_margin="@dimen/small_spacing"
        android:onClick="@{view -> obj.onClick()}"
        bind:cardBackgroundColor="?attr/colorSurface">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/transparent">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/provider_icon_size"
                android:layout_height="@dimen/provider_icon_size"
                android:minWidth="@dimen/provider_icon_size"
                android:minHeight="@dimen/provider_icon_size"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                bind:imageRes="@{obj.icon}"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{obj.title}"
                android:layout_toEndOf="@+id/icon"
                android:layout_centerVertical="true"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_marginStart="@dimen/normal_spacing"
                bind:resTextColor="@{obj.titleColor}"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="@dimen/provider_icon_size"
                android:layout_height="@dimen/provider_icon_size"
                android:minWidth="@dimen/provider_icon_size"
                android:minHeight="@dimen/provider_icon_size"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                bind:imageRes="@{obj.authStatusIcon}"
                android:layout_alignParentEnd="true"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>