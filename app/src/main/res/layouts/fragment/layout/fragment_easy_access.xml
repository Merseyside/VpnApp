<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.merseyside.dropletapp.presentation.view.fragment.easyAccess.view.EasyAccessFragment">
    <data>
        <variable
            name="viewModel"
            type="com.merseyside.dropletapp.presentation.view.fragment.easyAccess.model.EasyAccessViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/normal_spacing"
        android:paddingBottom="@dimen/large_spacing"
        android:background="@drawable/background_easy">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/world"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                tools:ignore="ContentDescription"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.merseyside.archy.presentation.view.localeViews.LocaleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/VpnApp.Headline5"
                android:text="@string/choose_region"
                android:layout_marginStart="@dimen/medium_spacing"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="?attr/textColorSecondary"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/region_spinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/big_spinner_size"
                android:overlapAnchor="true"
                android:scrollbars="none"
                android:minWidth="@dimen/big_spinner_size"
                android:background="@drawable/country_spinner_background"
                android:layout_margin="@dimen/medium_spacing"
                android:layout_centerVertical="true"
                android:popupBackground="@drawable/country_spinner_dropdown_background"
                app:onRegionSelected="@={viewModel.currentRegion}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.merseyside.archy.presentation.view.localeViews.LocaleTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textData="@{viewModel.info}"
                android:textAppearance="@style/VpnApp.Body1"
                android:layout_above="@+id/region_spinner"
                android:textColor="?attr/pendingColor"
                android:layout_marginStart="@dimen/medium_spacing"
                android:layout_marginEnd="@dimen/medium_spacing"
                android:layout_marginBottom="@dimen/small_spacing"
                app:layout_constraintBottom_toTopOf="@+id/region_spinner"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="@dimen/normal_spacing"
            android:paddingEnd="@dimen/normal_spacing">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/type_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.merseyside.archy.presentation.view.localeViews.LocaleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/VpnApp.Headline5"
                        android:textColor="?attr/textColorSecondary"
                        android:text="@string/choose_protocol"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/type_list"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:layout_marginTop="@dimen/medium_spacing"
                        app:types="@{viewModel.types}"
                        android:layout_gravity="center"
                        app:onTypeSelected="@{(i, y, u) -> viewModel.onTypeChanged(i)}"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/time_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:visibility="invisible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time_session"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:letterSpacing="0.25"
                        android:textAllCaps="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:text="@{viewModel.timer}"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/very_large_spacing"
                android:gravity="center">

                <Button
                    android:id="@+id/connect"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.connectButtonTitle}"
                    app:backgroundDrawable="@{viewModel.connectButtonDrawable}"
                    app:backgroundTint="@null"
                    android:onClick="@{view -> viewModel.onConnect()}"
                    android:textColor="?attr/colorOnPrimary" />

                <com.merseyside.archy.presentation.view.localeViews.LocaleButton
                    android:id="@+id/subscription"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:text="@string/subscribe"
                    android:textColor="?attr/colorOnPrimary"
                    android:background="@drawable/background_action_button_idle"
                    app:backgroundTint="@null"
                    android:letterSpacing="0.13"
                    android:layout_marginTop="@dimen/small_spacing"
                    app:isVisibleOrGone="@{!viewModel.isPurchased}"/>

                <com.merseyside.archy.presentation.view.localeViews.LocaleButton
                    android:id="@+id/change_region"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:text="@string/change_region"
                    android:textColor="?attr/colorOnPrimary"
                    app:isVisibleOrGone="@{viewModel.isNewRegion}"
                    android:letterSpacing="0.13"
                    android:background="@drawable/background_action_button_idle"
                    android:onClick="@{view -> viewModel.onChangeRegion()}"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>