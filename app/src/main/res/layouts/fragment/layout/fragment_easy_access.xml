<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.merseyside.dropletapp.presentation.view.fragment.easyAccess.view.EasyAccessFragment">
    <data>
        <variable
            name="viewModel"
            type="com.merseyside.dropletapp.presentation.view.fragment.easyAccess.model.EasyAccessViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/normal_spacing"
        android:paddingBottom="@dimen/large_spacing"
        android:background="@drawable/background_easy">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/world"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                tools:ignore="ContentDescription"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/region_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.merseyside.archy.presentation.view.localeViews.LocaleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/VpnApp.Headline4"
                    android:text="@string/choose_region"
                    android:layout_marginStart="@dimen/medium_spacing"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="?attr/textColorSecondary"
                    android:fontFamily="@font/ubuntu_condenced"/>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/region_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/big_spinner_size"
                    android:overlapAnchor="true"
                    android:scrollbars="none"
                    android:minWidth="@dimen/big_spinner_size"
                    android:background="@drawable/country_spinner_background"
                    android:layout_margin="@dimen/medium_spacing"
                    android:layout_centerVertical="true"
                    android:popupBackground="@drawable/country_spinner_dropdown_background"
                    app:onRegionSelected="@={viewModel.currentRegion}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <com.merseyside.archy.presentation.view.localeViews.LocaleTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:textData="@{viewModel.info}"
                    android:textAppearance="@style/VpnApp.Body1"
                    android:layout_above="@+id/region_spinner"
                    android:textColor="?attr/pendingColor"
                    android:layout_marginStart="@dimen/medium_spacing"
                    android:layout_marginEnd="@dimen/medium_spacing"
                    android:layout_marginBottom="@dimen/small_spacing"
                    app:layout_constraintBottom_toTopOf="@+id/region_spinner"
                    android:fontFamily="@font/ubuntu"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.merseyside.archy.presentation.view.localeViews.LocaleTextView
                android:id="@+id/connected_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/VpnApp.Headline5"
                android:text="@string/connected_to_vpn"
                android:layout_marginStart="@dimen/medium_spacing"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="?attr/textColorSecondary"
                android:visibility="invisible"
                android:fontFamily="@font/ubuntu_condenced"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="@dimen/normal_spacing"
            android:paddingEnd="@dimen/normal_spacing">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/type_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <com.merseyside.archy.presentation.view.localeViews.LocaleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/VpnApp.Headline4"
                        android:textColor="?attr/textColorSecondary"
                        android:text="@string/choose_protocol"
                        android:fontFamily="@font/ubuntu_condenced"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/type_list"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:layout_marginTop="@dimen/medium_spacing"
                        app:types="@{viewModel.types}"
                        android:layout_gravity="center"
                        app:onTypeSelected="@{(i, y, u) -> viewModel.onTypeChanged(i)}"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/time_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:visibility="invisible">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/small_spacing">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/small_spacing"
                            android:paddingStart="@dimen/small_spacing"
                            android:paddingEnd="@dimen/small_spacing"
                            android:background="@drawable/free_type_bg">

                            <com.merseyside.archy.presentation.view.localeViews.LocaleTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/textColorSecondary"
                                android:text="@string/session_time"
                                android:textAppearance="@style/VpnApp.Body1"
                                android:fontFamily="@font/ubuntu_condenced"/>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/tiny_spacing"
                                android:layout_marginStart="@dimen/small_spacing"
                                android:layout_marginEnd="@dimen/small_spacing"
                                android:background="@color/grey_dark"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/VpnApp.Body1"
                                android:textColor="?attr/colorSecondary"
                                android:text="@{viewModel.timer}"
                                android:fontFamily="@font/ubuntu_condenced"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/small_spacing"
                            android:paddingStart="@dimen/small_spacing"
                            android:paddingEnd="@dimen/small_spacing"
                            android:layout_marginStart="@dimen/small_spacing"
                            android:background="@drawable/free_type_bg">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/VpnApp.Body1"
                                android:textColor="?attr/textColorSecondary"
                                android:text="@string/ip_address"
                                android:fontFamily="@font/ubuntu_condenced"/>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/tiny_spacing"
                                android:layout_marginStart="@dimen/small_spacing"
                                android:layout_marginEnd="@dimen/small_spacing"
                                android:background="@color/grey_dark"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/VpnApp.Body1"
                                android:textColor="?attr/colorSecondary"
                                android:text="@{viewModel.ipAddress}"
                                android:fontFamily="@font/ubuntu_condenced"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/small_spacing"
                            android:paddingStart="@dimen/small_spacing"
                            android:paddingEnd="@dimen/small_spacing"
                            android:background="@drawable/free_type_bg">

                            <com.merseyside.archy.presentation.view.localeViews.LocaleTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/VpnApp.Body1"
                                android:textColor="?attr/textColorSecondary"
                                android:text="@string/protocol"
                                android:fontFamily="@font/ubuntu_condenced"/>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/tiny_spacing"
                                android:layout_marginStart="@dimen/small_spacing"
                                android:layout_marginEnd="@dimen/small_spacing"
                                android:background="@color/grey_dark"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/VpnApp.Body1"
                                android:textColor="?attr/colorSecondary"
                                android:text="@{viewModel.protocol}"
                                android:fontFamily="@font/ubuntu_condenced"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/small_spacing"
                            android:paddingStart="@dimen/small_spacing"
                            android:paddingEnd="@dimen/small_spacing"
                            android:layout_marginStart="@dimen/small_spacing"
                            android:background="@drawable/free_type_bg">

                            <com.merseyside.archy.presentation.view.localeViews.LocaleTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/VpnApp.Body1"
                                android:textColor="?attr/textColorSecondary"
                                android:text="@string/region1"
                                android:fontFamily="@font/ubuntu_condenced"/>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/tiny_spacing"
                                android:layout_marginStart="@dimen/small_spacing"
                                android:layout_marginEnd="@dimen/small_spacing"
                                android:background="@color/grey_dark"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/VpnApp.Body1"
                                android:textColor="?attr/colorSecondary"
                                android:text="@{viewModel.region}"
                                android:fontFamily="@font/ubuntu_condenced"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>



            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/very_large_spacing"
                android:gravity="center">

                <com.merseyside.archy.presentation.view.localeViews.LocaleButton
                    android:id="@+id/connect"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.connectButtonTitle}"
                    android:background="@drawable/background_action_button_idle"
                    app:backgroundTint="@null"
                    android:letterSpacing="0.13"
                    android:onClick="@{view -> viewModel.onConnect()}"
                    android:textColor="?attr/colorOnPrimary"
                    android:fontFamily="@font/ubuntu"/>

                <com.merseyside.archy.presentation.view.localeViews.LocaleButton
                    android:id="@+id/subscription"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_spacing"
                    android:layout_marginBottom="@dimen/small_spacing"
                    android:background="@drawable/background_action_button_idle"
                    android:letterSpacing="0.13"
                    android:text="@string/subscribe"
                    android:textColor="?attr/colorOnPrimary"
                    app:backgroundTint="@null"
                    app:isVisibleOrGone="@{!viewModel.isPurchased}"
                    android:fontFamily="@font/ubuntu"/>

                <com.merseyside.archy.presentation.view.localeViews.LocaleButton
                    android:id="@+id/change_region"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:text="@string/change_region"
                    android:textColor="?attr/colorOnPrimary"
                    app:isVisibleOrGone="@{viewModel.isNewRegion}"
                    android:letterSpacing="0.13"
                    android:background="@drawable/background_action_button_idle"
                    android:onClick="@{view -> viewModel.onChangeRegion()}"
                    android:fontFamily="@font/ubuntu"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>